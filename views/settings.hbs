<h1>Settings</h1>
<h2>Your Projects</h2>
<a href="/new/project">
    <i class="fas fa-plus-circle bigIcon" title="Add a project"></i>
</a>
<table class="table">
    <tr>
        <th>Name</th>
        <th>Members</th>
        <th></th>
        <th></th>
    </tr>
    {{#each projects}}
        <tr>
            <td>{{this.name}}</td>
            <td>
                <ol class="settingslist">
                    {{#each this.members}}
                        <li>{{this}}</li>
                    {{/each}}
                </ol>
            </td>
            <td><a href="/project/update/{{this._id}}" title="Update project"><i class="fas fa-edit"></i></a></td>
            <td><a href="/project/remove/{{this._id}}" title="Remove project"><i class="fas fa-trash-alt"></i></a></td>
        </tr>
    {{/each}}
</table>

<h2>Statuses</h2>
<a href="/new/status">
    <i class="fas fa-plus-circle bigIcon" title="Add a status"></i>
</a>
<table class="table">
    <tr>
        <th>Name</th>
        <th></th>
        <th></th>
    </tr>
    {{#each statuses}}
        <tr>
            <td>{{this.name}}</td>
            <td><a href="/status/update/{{this._id}}" title="Update status"><i class="fas fa-edit"></i></a></td>
            <td><a href="/status/remove/{{this._id}}" title="Remove user"><i class="fas fa-trash-alt"></i></a></td>
        </tr>
    {{/each}}
</table>

<h2>Users</h2>
<a href="/new/user">
    <i class="fas fa-plus-circle bigIcon" title="Add a user"></i>
</a>
<table class="table">
    <tr>
        <th>Fisrtname</th>
        <th>Lastname</th>
        <th>Login</th>
        <th>Password</th>
        <th>Roles</th>
        <th></th>
        <th></th>
    </tr>
    {{#each users}}
        <tr>
            <td>{{this.firstname}}</td>
            <td>{{this.name}}</td>
            <td>{{this.login}}</td>
            <td>{{this.password}}</td>
            <td>
                <ol class="settingslist">
                {{#each this.roles}}
                    <li>{{this}}</li>
                {{/each}}
                </ol>
            </td>
            <td><a href="/user/update/{{this._id}}" title="Update user"><i class="fas fa-edit"></i></a></td>
            <td><a href="/user/remove/{{this._id}}" title="Remove user"><i class="fas fa-trash-alt"></i></a></td>
        </tr>
    {{/each}}
</table>