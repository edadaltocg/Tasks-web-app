<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/settings">Settings</a>
        </li>
    </ol>
</nav>

<!--form-->
{{#if element._id}}
    <h3>Update {{dbElement}} "{{element.name}}"</h3>
{{else}}
    <h3>Create a new {{dbElement}}</h3>
{{/if}}

<div class="container">
    <!-- update -->
    {{#if element._id}}
    <form action="/{{dbElement}}/post/{{element._id}}" method="post">
    {{else}}
    <form action="/{{dbElement}}/post/new" method="post">
    {{/if}}


    <div class="form-group row">
        <label for="title" class="col-sm-4 col-form-label">Firstname</label>
        <div class="col-sm-8">
            <input type="text" class="form-control"
                   name="firstname"
                   value="{{element.firstname}}" placeholder="Enter firstname">
        </div>
    </div>

    <div class="form-group row">
        <label for="title" class="col-sm-4 col-form-label">Lastname</label>
        <div class="col-sm-8">
            <input type="text" class="form-control"
                   name="name"
                   value="{{element.name}}" placeholder="Enter lastname">
        </div>
    </div>

    <div class="form-group row">
        <label for="title" class="col-sm-4 col-form-label">Login</label>
        <div class="col-sm-8">
            <input type="text" class="form-control"
                   name="login"
                   value="{{element.login}}" placeholder="Enter login">
        </div>
    </div>

    <div class="form-group row">
        <label for="title" class="col-sm-4 col-form-label">Password</label>
        <div class="col-sm-8">
            <input type="password" class="form-control"
                   name="password"
                   value="{{element.password}}" placeholder="Enter password">
        </div>
    </div>

    <div class="form-group row">
        <label for="roles" class="col-sm-4 col-form-label">Roles</label>
        <div class="col-sm-8">

            <input type="checkbox" name="roles"
                   value="admin" class="onoffswitch-checkbox"
                {{checked element.roles "admin"}}> admin
            <p>PS. The role "member" is check as default.</p>
            <input type="hidden" name="roles" value="member">
        </div>
    </div>


    <button type="submit" class="btn btn-primary">Save</button>
</form>

</div>
